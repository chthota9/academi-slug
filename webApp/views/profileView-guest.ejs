<!DOCTYPE html>

<html class="html">

<head>
    <%- include ./templates/header %>
    <title>Academi-Slug | Profile</title>
</head>

<%- include ./templates/nav-search %>

<body class="body">
    <div class="bg-bigger">
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-end">
                            <h2 class="display-5 mb-0 "><%- profile.name.first %>'s Profile</h2>

                            <% if (profile.linkedIn != "") { %>
                                <script src="//platform.linkedin.com/in.js" type="text/javascript" defer></script>
                                <script type="IN/MemberProfile" data-id="<%- profile.linkedIn %>" data-format="click" data-related="false" data-text="Go to <%- profile.name.first %>'s LinkedIn"></script>
                            <% } %>

                        </div>
                        <dl class="dl-horizontal">
                            <dt class="col-sm-3 mt-4">Name:</dt>
                            <dd class="col-sm-9">
                            <%= profile.name.first %> <%= profile.name.last %>
                            </dd>
                            <hr>

                            <dt class="col-sm-3">Year:</dt>
                            <dd class="col-sm-9">
                                <%= profile.year %>
                            </dd>
                            <hr>

                            <dt class="col-sm-3">Major:</dt>
                            <dd class="col-sm-9">
                                <%= profile.major %>
                            </dd>
                            <hr>

                            <dt class="col-sm-3">College:</dt>
                            <dd class="col-sm-9">
                                <%= profile.college %>
                            </dd>
                            <hr>

                            <dt class="col-sm-3">About:</dt>
                            <dd class="col-sm-9">
                                <%= profile.bio %>
                            </dd>
                            <hr>

                            <dt class="col-sm-6">Courses Teaching:</dt>
                            <ul>
                                <% courses.forEach(course=>{ %>
                                    <p>
                                        <li>
                                            <div class="form-group row">
                                                <label class="col-4 col-form-label"><%= course.courseName %></label>
                                                <div class="col">
                                                    <a href='/profile/user/<%= profile.googleID %>/review/<%= course._id %>' class="btn btn-tertiary">Leave Review</a>
                                                </div>
                                            </div>
                                        </li>
                                    </p>
                                <%   }) %>
                            </ul>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
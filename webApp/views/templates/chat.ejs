<!-- Chat view -->
<% if(typeof loggedIn !== 'undefined'){ %>
    <% if(loggedIn){ %>
        <div class="chatBox minimized">
            <div class="minimize"></div>
            <div class="chatNameTitle"><span>Live Chat</span><span class="dropDownArrow hidden"></span><ul class="chatList hidden"></ul></div>
            <div class="chatContainer"><div class="chatHelper">To message your tutor, click on 'Ask for Help!' in their profile. If your tutor is online, you will be able to talk with them here! If you messaging multiple windows, click the down arrow to switch windows.</div></div>
            <input class="inputBox" maxlength="120" type="text" placeholder=" Type a message..." disabled>
        </div>
        <script src="/socket.io/socket.io.js" defer></script>
        <script src="/chat.js" defer></script>
    <% } %>
<% }%>
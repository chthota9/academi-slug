<!DOCTYPE html>

<html class="html">

<head>
    <%- include templates/header %>
    <title>Academi-Slug | Search Results</title>
</head>

<!-- <script src="nav-buttons.js"></script> -->
<%- include templates/nav-buttons %>

<body class="body">
    <div class="bg">
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="col-md-auto">
                    <div class="card">
                        <div class="card-header">
                            <div class="search-text">
                                <h4>You searched for: </h4>

                                <body>
                                    <h4>
                                        <%= classSearched.name %>
                                    </h4>
                                </body>
                                <h4>
                                    <%- classSearched.tutors.length %> tutors found.</h4>
                            </div>

                            <div class="dropdown">
                                <button class="btn btn-sort">Sort By â†“</button>
                                <div class="dropdown-content">
                                    <a href="#">Alphabetically</a>
                                    <a href="#">Ratings</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body col-md-auto">
                            <div class="tutor-table">
                                <table class="centralize">
                                    <tr>
                                        <th>Last, First</th>
                                        <th>Ratings</th>
                                    </tr>
                                    
									<% classSearched.tutors.forEach(tutor =>{ %>
										<tr>
                                            <td><a href="/profile/user/<%= tutor.googleID %>"> <%= tutor.name %> </a></td>
                                            <% let rating = tutor.rating; %>
                                            <% let rounded = Math.round(rating); %>
                                            <% let maxRating = 5; %>
                                            <td>
                                                <% for (star = 0; star <= rounded; star++) { %>
                                                    <span class="fa fa-star checked"></span>
                                                <% } %>
                                                <% for (star = rounded; star <= maxRating - rounded; star++) { %>
                                                    <span class="fa fa-star"></span>
                                                <% } %>
                                                </td>
											<!-- <td><%= '*'.repeat(tutor.rating);  %></td> -->
										</tr>	
                                    <% }) %>
                                    
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>